<Project Sdk="Godot.NET.Sdk/4.0.0-beta.17">
  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <EnableDynamicLoading>true</EnableDynamicLoading>
    <LangVersion>10.0</LangVersion>
    <Nullable>enable</Nullable>
    <!-- Required for some nuget packages to work -->
    <!-- See https://www.reddit.com/r/godot/comments/l0naqg/comment/gjwfspm/ -->
    <!-- And https://github.com/godotengine/godot/issues/42271#issuecomment-751423827 -->
    <CopyLocalLockFileAssemblies>true</CopyLocalLockFileAssemblies>
    <RootNamespace>GoDotTestTest</RootNamespace>
    <!-- To show generated files -->
    <!-- <EmitCompilerGeneratedFiles>true</EmitCompilerGeneratedFiles>
    <CompilerGeneratedFilesOutputPath>.generated</CompilerGeneratedFilesOutputPath> -->
    <DebugType>full</DebugType>
    <DebugSymbols>true</DebugSymbols>
  </PropertyGroup>
  <ItemGroup>
    <!-- Bring your own assertion library for tests! -->
    <!-- We're using Shouldy for this example, but you can use anything. -->
    <PackageReference Include="Shouldly" Version="4.0.3" />
    <!-- Godot beta 2 doesn't support dynamic code generation, which breaks -->
    <!-- packages like Moq and other popular mocking libaries. We're using -->
    <!-- LightMock since it uses a source generator to create mocks. -->
    <!-- See https://github.com/godotengine/godot/issues/66060 -->
    <PackageReference Include="LightMock.Generator" Version="1.1.2" />
    <PackageReference Include="LightMoq" Version="0.1.0" />

    <ProjectReference Include="../../go_dot_log/GoDotLog.csproj" />
    <ProjectReference Include="../../go_dot_collections/GoDotCollections.csproj" />
    <!-- Include GoDotTest files directly for the sake of coverage -->
    <!-- https://stackoverflow.com/a/35477501 -->
    <Compile Include="../src/**/*.cs">
      <Link>go_dot_test</Link>
    </Compile>
  </ItemGroup>
</Project>
