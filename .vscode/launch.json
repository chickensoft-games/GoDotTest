{
  "version": "0.2.0",
  "inputs": [
    {
      "id": "specificTest",
      "type": "promptString",
      "description": "Method name of the test in the active test suite.",
      "default": ""
    }
  ],
  "configurations": [
    // For these launch configurations to work, you need to setup a GODOT
    // environment variable. On mac or linux, this can be done by adding
    // the following to your .zshrc, .bashrc, or .bash_profile file:
    // export GODOT="/Applications/Godot.app/Contents/MacOS/Godot"
    {
      "name": "üß™ Debug Tests",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${env:GODOT}",
      "args": [
        // These command line flags are used by GoDotTest to run tests.
        "--run-tests",
        "--quit-on-finish"
      ],
      "cwd": "${workspaceFolder}/Chickensoft.GoDotTest.Tests",
    },
    {
      "name": "üî¨ Debug Current Test",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${env:GODOT}",
      "args": [
        // These command line flags are used by GoDotTest to run tests.
        "--run-tests=${fileBasenameNoExtension}",
        "--quit-on-finish"
      ],
      "cwd": "${workspaceFolder}/Chickensoft.GoDotTest.Tests",
    },
    {
      "name": "üßê Debug Specific Test",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${env:GODOT}",
      "args": [
        // These command line flags are used by GoDotTest to run tests.
        "--run-tests=${fileBasenameNoExtension}.${input:specificTest}",
        "--quit-on-finish"
      ],
      "cwd": "${workspaceFolder}/Chickensoft.GoDotTest.Tests",
    },
  ]
}